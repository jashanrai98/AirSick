<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="AirSick"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/collectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="240dp"

        android:text="Air Quality Collection Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ratingDisplayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:text="1 - 10+ "
        app:layout_constraintBaseline_toBaselineOf="@+id/ratingTagText"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sourceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="83dp"
        android:text="Source of Air Quality"
        app:layout_constraintBaseline_toBaselineOf="@+id/companySourceText"
        app:layout_constraintEnd_toStartOf="@+id/companySourceText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/companySourceText"
        android:layout_width="106dp"
        android:layout_height="21dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="43dp"
        android:text="Company Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sourceText"
        app:layout_constraintTop_toBottomOf="@+id/ratingDisplayText" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="dd/mm/yyyy/hh/mm/ss"
        app:layout_constraintBaseline_toBaselineOf="@+id/collectionText"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ratingTagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        android:text="Air Quality Rating"
        app:layout_constraintEnd_toEndOf="@+id/collectionText"
        app:layout_constraintTop_toBottomOf="@+id/collectionText" />

    <TextView
        android:id="@+id/currentCityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="Your Current City"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoText" />

</androidx.constraintlayout.widget.ConstraintLayout>